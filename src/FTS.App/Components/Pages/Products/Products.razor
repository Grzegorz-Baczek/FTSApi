@page "/"
@page "/products"
@rendermode InteractiveServer

<PageTitle>Products</PageTitle>

<MudStack Row="true">
	<MudSpacer />
	<MudButton OnClick="NavigateCreateProduct" Color="Color.Primary" Variant="Variant.Filled">
		Add Product
	</MudButton>
</MudStack>

<MudStack Row="true">
	<MudSpacer />
	<MudButton OnClick="NavigateCreateCategory" Color="Color.Primary" Variant="Variant.Filled">
		Add Category
	</MudButton>
</MudStack>


@if (products is null)
{
	<MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
}
else
{
	<MudGrid Gutter="Size.Medium">
		@foreach (var product in products)
		{
			<MudItem xs="12" sm="6" md="4" lg="3">
				<MudCard Style="height: 100%;">
					<MudText Style="display:flex; justify-content:center;" Typo="Typo.body2">@product.Name</MudText>
					<MudCardMedia Image="zdjecie w przyszlosci" Height="100" />
					<MudCardContent>
						@* <MudText Typo="Typo.body2" Class="mt-2">Category: @product.CategoryName</MudText> *@
					</MudCardContent>

					<MudButton OnClick="@(() => NavigateToDetails(product.Id))"
							   Variant="Variant.Text"
							   Color="Color.Default">
						Przejdź do przepisu
					</MudButton>
				</MudCard>
			</MudItem>
		}
	</MudGrid>
}