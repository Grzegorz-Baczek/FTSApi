@page "/login"
@rendermode InteractiveServer
@layout FTS.App.Components.Layout.EmptyLayout

<PageTitle>Logowanie</PageTitle>

<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 24px 0; background: linear-gradient(135deg, #5d4037 0%, #4e342e 50%, #3e2723 100%);">
	<MudCard Elevation="8" Style="width: 420px; border-radius: 16px;">
		<MudCardContent Class="pa-6">

			<div class="d-flex justify-center mb-2">
				<MudAvatar Style="background: linear-gradient(135deg, #5d4037, #4e342e); width: 48px; height: 48px;">
					<MudIcon Icon="@Icons.Material.Filled.MenuBook" Style="color: white;" />
				</MudAvatar>
			</div>

			<MudText Typo="Typo.h5" Align="Align.Center" GutterBottom="true" Style="font-family: 'Georgia', serif; font-weight: 700;">
				Witaj ponownie
			</MudText>
			<MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark" Class="mb-4">
				Zaloguj się do SmakShare
			</MudText>

			<EditForm Model="LoginViewModel" OnValidSubmit="HandleLogin" FormName="LoginForm">
				<DataAnnotationsValidator />

				<MudTextField @bind-Value="LoginViewModel.Email"
							  For="@(() => LoginViewModel.Email)"
							  Immediate="true"
							  Label="Email"
							  Variant="Variant.Outlined"
							  Adornment="Adornment.Start"
							  AdornmentIcon="@Icons.Material.Filled.Email"
							  Margin="Margin.Dense"
							  Class="mb-3" />

				<MudTextField @bind-Value="LoginViewModel.Password"
							  For="@(() => LoginViewModel.Password)"
							  Immediate="true"
							  Label="Hasło"
							  Variant="Variant.Outlined"
							  InputType="InputType.Password"
							  Adornment="Adornment.Start"
							  AdornmentIcon="@Icons.Material.Filled.Lock"
							  Margin="Margin.Dense"
							  Class="mb-4" />

				<MudButton ButtonType="ButtonType.Submit"
						   Variant="Variant.Filled"
						   FullWidth="true"
						   Size="Size.Large"
						   Class="mb-3"
						   Style="border-radius: 8px; text-transform: none; font-size: 1rem; background: linear-gradient(135deg, #5d4037, #4e342e); color: white;">
					Zaloguj się
				</MudButton>
			</EditForm>

			<MudDivider Class="my-3" />

			<MudText Typo="Typo.body2" Align="Align.Center">
				Nie masz konta?
				<MudLink Href="/register" Typo="Typo.body2" Style="color: #5d4037; font-weight: 600;">
					Zarejestruj się
				</MudLink>
			</MudText>

		</MudCardContent>
	</MudCard>
</div>