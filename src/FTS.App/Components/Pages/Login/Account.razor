@page "/account"

<MudPaper Class="pa-6" MaxWidth="400px">

	<MudText Typo="Typo.h5">Profil</MudText>
	<MudDivider Class="my-4" />

	@if (isLoading)
	{
		<MudProgressCircular Indeterminate="true" />
	}
	else if (error is not null)
	{
		<MudAlert Severity="Severity.Error">@error</MudAlert>
	}
	else if (user is not null)
	{
		<MudStack Direction="Row" Spacing="2">
			<MudAvatar Color="Color.Primary" Size="Size.Large">
				@GetInitial(user.Name)
			</MudAvatar>

			<MudStack>
				<MudText Typo="Typo.h6">@user.Name</MudText>
				<MudText Typo="Typo.caption">Dołączył: @user.CreatedAt.ToString("yyyy-MM-dd")</MudText>
			</MudStack>
		</MudStack>

		<MudDivider Class="my-4" />

		<MudText><b>Level:</b> @user.Level</MudText>
		<MudText><b>Punkty:</b> @user.RankPoints</MudText>
	}
</MudPaper>