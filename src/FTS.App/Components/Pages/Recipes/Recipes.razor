@page "/"
@page "/recipes"
@rendermode InteractiveServer

<PageTitle>Recipes</PageTitle>

<MudStack Row="true">
	<MudSpacer />
	<MudButton OnClick="NavigateCreateRecipe" Color="Color.Primary" Variant="Variant.Filled">
		Add Recipe
	</MudButton>
</MudStack>

<MudStack Row="true">
	<MudSpacer />
	<MudButton OnClick="NavigateCreateIngredient" Color="Color.Primary" Variant="Variant.Filled">
		Add Ingredient
	</MudButton>
</MudStack>

@if (RecipesViewModel is null)
{
	<MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
}
else
{
	<MudGrid Gutter="Size.Medium">
		@foreach (var recipe in RecipesViewModel)
		{
			<MudItem xs="12" sm="6" md="4" lg="3">
				<MudCard Style="height: 100%;">
					<MudText Style="display:flex; justify-content:center;" Typo="Typo.body2">@recipe.Title</MudText>
					<MudCardMedia Image="zdjecie w przyszlosci" Height="100">
						@recipe.ImageUrl
					</MudCardMedia>
					<MudCardContent>
						<MudText Typo="Typo.body2" Class="mt-2">Author: @recipe.Author</MudText>
					</MudCardContent>

					<MudButton OnClick="@(() => NavigateToDetails(recipe.Id))"
							   Variant="Variant.Text"
							   Color="Color.Default">
						Przejdź do przepisu
					</MudButton>
				</MudCard>
			</MudItem>
		}
	</MudGrid>
}