@page "/"
@page "/recipes"
@rendermode InteractiveServer

<PageTitle>Przepisy</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">

	<MudText Typo="Typo.h4" GutterBottom="true" Style="font-family: 'Georgia', serif; font-weight: 700;">
		Przepisy
	</MudText>

	@if (RecipesViewModel is null)
	{
		<MudStack AlignItems="AlignItems.Center" Class="mt-8">
			<MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
		</MudStack>
	}
	else
	{
		<MudGrid Spacing="4">
			@foreach (var recipe in RecipesViewModel)
			{
				<MudItem xs="12" sm="6" md="4" lg="3">
					<MudCard Elevation="4" Style="height: 100%; border-radius: 12px;">
						<MudCardMedia Image="@(recipe.ImageUrl ?? "images/placeholder.png")" Height="160" />
						<MudCardContent>
							<MudText Typo="Typo.h6" Align="Align.Center">@recipe.Title</MudText>
							<MudText Typo="Typo.body2" Color="Color.Dark" Class="mt-1">
								Autor: @recipe.Author
							</MudText>
						</MudCardContent>
						<MudCardActions>
							<MudButton OnClick="@(() => NavigateToDetails(recipe.Id))"
									   Variant="Variant.Text"
									   Color="Color.Primary"
									   FullWidth="true">
								Przejdź do przepisu
							</MudButton>
						</MudCardActions>
					</MudCard>
				</MudItem>
			}
		</MudGrid>
	}

</MudContainer>