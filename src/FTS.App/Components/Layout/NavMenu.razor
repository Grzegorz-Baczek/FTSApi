@inject NavigationManager NavigationManager

<MudNavMenu Bordered="true" Color="Color.Primary" Rounded="true" Class="px-3">

	<MudNavLink Href="/"
				Icon="@Icons.Material.Filled.Home"
				Match="NavLinkMatch.All">
		Strona główna
	</MudNavLink>

	<MudText Typo="Typo.overline" Class="mt-4 ml-3" Style="font-weight: 600;">Przepisy</MudText>

	<MudNavLink Href="/recipes"
				Icon="@Icons.Material.Filled.MenuBook"
				Match="NavLinkMatch.Prefix">
		Przeglądaj przepisy
	</MudNavLink>

	<MudNavLink Href="/createrecipe"
				Icon="@Icons.Material.Filled.PostAdd"
				Match="NavLinkMatch.All">
		Dodaj przepis
	</MudNavLink>

	<MudText Typo="Typo.overline" Class="mt-4 ml-3" Style="font-weight: 600;">Składniki</MudText>

	<MudNavLink Href="/createingredient"
				Icon="@Icons.Material.Filled.Egg"
				Match="NavLinkMatch.All">
		Dodaj składnik
	</MudNavLink>

</MudNavMenu>

